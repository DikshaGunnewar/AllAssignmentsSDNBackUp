@model LastCode.ViewModels.NameCountryState
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form Filling</h2>
<script type="text/javascript" src="JS/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@using (Html.BeginForm("Save", "Customer"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Customer.Birthdate)
        @Html.EditorFor(Model => Model.Customer.Birthdate, new { htmlAttributes = new { @class = "form-control", @id = "Birthdate" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.CountryName)
        @Html.DropDownListFor(m => m.Customer.CountryName, new SelectList(Model.Countries,"CountryName","CountryName"), "Select Country Name", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.StateName)
        @Html.DropDownListFor(m => m.Customer.StateName, new SelectList(Model.States, "StateName","StateName"), "Select State Name", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Address)
        @Html.TextAreaFor(m => m.Customer.Address, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}
<script type="text/javascript">
            $(function () {
                $('#Birthdate').datetimepicker();
            });
</script>