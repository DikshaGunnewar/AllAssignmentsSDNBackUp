@model IEnumerable<DikshaAssignment3.Models.Student1>
@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; border:1px dashed blue; padding:20px;">Student Details</h2>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
</head>
<body>

    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Student Age</th>
                <th>Email</th>
                <th>Qualifications</th>
                <th>Maritial Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Qualification</td>
                    <td>@item.MaritialStatus</td>

                </tr>
            }
        </tbody>
    </table>

    <button class="btn pull-right" style="background-color:lightblue;">@Html.ActionLink("Add Student", "Create")</button>  
    <div>
    </div>
</body>
</html>